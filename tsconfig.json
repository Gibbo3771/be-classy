{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es6", "es2015"],
    "types": ["node"],
    "declaration": true,
    "outDir": "dist",
    "strict": true
  },
  "exclude": ["dist", "node_modules", "tests/**/*.spec.ts"],
  "include": ["lib"]
}
